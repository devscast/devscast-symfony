{% extends "layout/app.html.twig" %}

{% block stylesheet %}
    {{ encore_entry_link_tags('dashboard/pages/filesystem') }}
{% endblock %}

{% block breadcrumb %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb breadcrumb-style1 mg-b-10">
            <li class="breadcrumb-item"><a href="{{ path('backend_index') }}">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="{{ path('backend_files_index') }}">files</a></li>
        </ol>
    </nav>
    <h4 class="mg-b-15 mg-lg-b-25">All Files</h4>
    <label class="d-block tx-medium tx-10 tx-uppercase tx-sans tx-spacing-1 tx-color-03 mg-b-15">
        {{ files ? files.path : file ? file.path : '' }}
    </label>
{% endblock %}

{% block body %}
    <div class="row row-xs">
        {% for file in files %}
            {% if not file.isDot %}
                <div class="col-4 col-lg-3 mt-3">
                    <div class="card card-file">
                        <div class="card-file-thumb tx-primary">
                            <a href="{{ path('backend_files_show') }}?file={{ file.realpath }}">
                                {% if not file.isDir %}
                                    <i class="fa fa-file-{{ file.extension == 'jpg' ? 'image' : 'alt' }}"></i>
                                {% else %}
                                    <i class="fa fa-folder"></i>
                                {% endif %}
                            </a>
                        </div>
                        <div class="card-body">
                            <h6><a href="" class="link-02">{{ file.basename }}</a></h6>
                            <span>{{ ((file.size / 1024) / 1024) | number_format(2, '.', ' ') }} Mb</span>
                        </div>
                        <div class="card-footer">
                            <div class="mb-2">Last accessed: {{ file.aTime | date('d M Y H:i') }}</div>
                            {% if file.isFile %}
                                <form method="post" action="{{ path('backend_files_delete') }}"
                                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_file" value="{{ file.realpath }}">
                                    <input type="hidden" name="_key" value="{{ file.key }}">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ file.key) }}">
                                    <button class="btn btn-sm btn-block btn-danger">
                                        Delete
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% else %}
            {% if file %}
                <div class="col-12">
                    {% if preview %}
                        <div class="card">
                            <div class="card-body text-center">
                                <img src="{{ preview }}" alt="preview" width="50%" height="auto">
                            </div>
                        </div>
                    {% endif %}
                    <div class="card mt-3">
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Writable</th>
                                    <td>{{ file.writable ?
                                        '<i class="fa fa-check text-success"></i>' :
                                        '<i class="fa fa-times text-danger"></i>' }}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Readable</th>
                                    <td>
                                        {{ file.readable ?
                                        '<i class="fa fa-check text-success"></i>' :
                                        '<i class="fa fa-times text-danger"></i>' }}
                                    </td>
                                </tr>
                                <tr>
                                    <th>Executable</th>
                                    <td>
                                        {{ file.executable ?
                                        '<i class="fa fa-check text-success"></i>' :
                                        '<i class="fa fa-times text-danger"></i>' }}
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="card mt-3">
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Basename</th>
                                    <td>{{ file.basename }}</td>
                                </tr>
                                <tr>
                                    <th>Filename</th>
                                    <td>{{ file.filename }}</td>
                                </tr>
                                <tr>
                                    <th>Path</th>
                                    <td>{{ file.path }}</td>
                                </tr>
                                <tr>
                                    <th>Real path</th>
                                    <td>{{ file.realPath }}</td>
                                </tr>
                                <tr>
                                    <th>Type</th>
                                    <td>{{ file.type }}</td>
                                </tr>
                                <tr>
                                    <th>Extension</th>
                                    <td>{{ file.extension }}</td>
                                </tr>
                                <tr>
                                    <th>Size</th>
                                    <td>{{ ((file.size / 1024) / 1024) | number_format(2, '.', ' ') }} Mb</td>
                                </tr>
                                <tr>
                                    <th>Permissions</th>
                                    <td>{{ file.perms }}</td>
                                </tr>
                                <tr>
                                    <th>Owner</th>
                                    <td>{{ file.owner }}</td>
                                </tr>
                                <tr>
                                    <th>Group</th>
                                    <td>{{ file.group }}</td>
                                </tr>
                                <tr>
                                    <th>Last access at</th>
                                    <td>{{ file.aTime | date('d M Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Last modified at</th>
                                    <td>{{ file.mTime | date('d M Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Created at</th>
                                    <td>{{ file.cTime | date('d M Y H:i') }}</td>
                                </tr>
                                <tr>
                                    <th>Inodes</th>
                                    <td>{{ file.inode }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
